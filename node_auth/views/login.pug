extends layout

block content
  h1 Login
  p Please login below
  form(methon='post', action='users/register', enctype='multipart/form-data')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='Username')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Enter Password')

    input.btn.btn-default(name='submit', type='submit', value='Login')
